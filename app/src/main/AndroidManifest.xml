<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.unifor.ilikemyheadphone" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistroActivity"
            android:label="@string/title_activity_registro"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.unifor.ilikemyheadphone.MainActivity" />
        </activity>
        <activity
            android:name=".RecSenhaActivity"
            android:label="@string/title_activity_rec_senha"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.unifor.ilikemyheadphone.MainActivity" />
        </activity>
        <activity
            android:name=".ListViewActivity"
            android:label="@string/title_activity_list_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.unifor.ilikemyheadphone.MainActivity" />
        </activity>
        <activity
            android:name=".EnviarReviewActivity"
            android:label="@string/title_activity_enviar_review"
            android:parentActivityName=".ListViewActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.unifor.ilikemyheadphone.ListViewActivity" />
        </activity>
        <activity
            android:name=".VerReviewActivity"
            android:label="@string/title_activity_ver_review"
            android:parentActivityName=".ListViewActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.unifor.ilikemyheadphone.ListViewActivity" />
        </activity>
    </application>

</manifest>
